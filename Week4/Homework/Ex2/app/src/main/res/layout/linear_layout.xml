<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter your Name"
        />



    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="Enter your phone number"
        />

    <RadioGroup
        android:id="@+id/chooseCheeseRadio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"

        >

        <RadioButton
            android:id="@+id/radioCheeseButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cheese" />

        <RadioButton
            android:id="@+id/radioCheeseButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 x Cheese" />
        <RadioButton
            android:id="@+id/radioCheeseButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="None"
            />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/chooseShapeRadio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"

        >

        <RadioButton
            android:id="@+id/radioShapeButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Square" />

        <RadioButton
            android:id="@+id/radioShapeButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Round" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/ChooseTopping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        >
        <CheckBox
            android:id="@+id/cbTopping1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pepperoni"
            />

        <CheckBox
            android:id="@+id/cbTopping2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mushroom"
            />

        <CheckBox
            android:id="@+id/cbTopping3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Veggies"
            />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Your Ordering:"
        android:textColor="#65000000"
        android:textSize="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:background="#65F8BBBB">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvOrderList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your order shown here"
                android:textSize="20dp"
                />
        </LinearLayout>

    </ScrollView>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btnExitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXIT" />

        <Button
            android:id="@+id/btnSubmitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:onClick="onSubmitButtonClick"
            android:text="SMS - PLACE YOUR ORDER" />

    </RadioGroup>

</LinearLayout>